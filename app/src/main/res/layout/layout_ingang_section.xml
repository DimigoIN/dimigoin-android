<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ingangTime"
            type="String" />

        <variable
            name="ingangName"
            type="String" />

        <variable
            name="currentNumber"
            type="int" />

        <variable
            name="totalNumber"
            type="int" />

        <variable
            name="applied"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/ingangTime"
            style="@style/Text.Sub.Tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:text="@{ingangTime}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="19:50 ~ 21:20" />

        <TextView
            android:id="@+id/ingangName"
            style="@style/Text.Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:text="@{ingangName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingangTime"
            tools:text="@string/night_study_1" />

        <Button
            style="@style/Button.Slim"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/default_horizontal_margin"
            android:text="@string/apply"
            app:layout_constraintBottom_toBottomOf="@id/ingangName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ingangName" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_horizontal_margin"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_round_corner_square"
            android:elevation="@dimen/default_card_elevation"
            android:padding="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingangName"
            app:spanCount="4"
            tools:itemCount="8"
            tools:listitem="@layout/item_ingang_applier_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
