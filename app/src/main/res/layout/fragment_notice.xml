<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="in.dimigo.dimigoin.ui.main.fragment.main.MainFragmentViewModel" />

        <variable
            name="position"
            type="int" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/Card.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_horizontal_margin"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.Sub.Tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="@{vm.noticeList[position].title}"
                    android:visibility="@{vm.noticeList[position].title == null ? View.GONE : View.VISIBLE}"
                    tools:text="@string/notice_loading_message" />

                <TextView
                    style="@style/Text.Content.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@{vm.noticeList[position].author.name}"
                    android:visibility="@{vm.noticeList[position].title == null ? View.GONE : View.VISIBLE}"
                    tools:text="@string/example_name" />

            </LinearLayout>

            <TextView
                style="@style/Text.Content.Grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{vm.noticeList[position] == null ? @string/notice_loading_message : vm.noticeList[position].content}"
                tools:text="@string/notice_loading_message" />
        </LinearLayout>

    </FrameLayout>

</layout>

