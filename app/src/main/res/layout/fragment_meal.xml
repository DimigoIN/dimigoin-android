<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="in.dimigo.dimigoin.ui.main.fragment.meal.MealViewModel" />

        <variable
            name="date"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/layout_title"
                app:icon="@{@drawable/ic_calendar}"
                app:sub="@{date}"
                app:title="@{@string/meal}" />

            <include
                layout="@layout/layout_meal_section"
                app:date="@{@string/example_time}"
                app:meal="@{vm.meal.breakfast}"
                app:title="@{@string/breakfast}" />

            <include
                layout="@layout/layout_meal_section"
                app:date="@{@string/example_time}"
                app:meal="@{vm.meal.lunch}"
                app:title="@{@string/lunch}" />

            <include
                layout="@layout/layout_meal_section"
                app:date="@{@string/example_time}"
                app:meal="@{vm.meal.dinner}"
                app:title="@{@string/dinner}" />

        </LinearLayout>

    </ScrollView>

</layout>
