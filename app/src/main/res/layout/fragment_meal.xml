<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="in.dimigo.dimigoin.ui.main.fragment.meal.MealTime" />

        <variable
            name="position"
            type="int" />

        <variable
            name="vm"
            type="in.dimigo.dimigoin.ui.main.fragment.meal.MealViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/layout_meal_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:meal="@{vm.weeklyMeals[position].breakfast}"
            app:mealTime="@{MealTime.BREAKFAST}"
            app:time="@{`오전 8시 10분`}" />

        <include
            layout="@layout/layout_meal_section"
            app:meal="@{vm.weeklyMeals[position].lunch}"
            app:mealTime="@{MealTime.LUNCH}"
            app:time="@{`오후 1시 27분`}" />

        <include
            layout="@layout/layout_meal_section"
            app:meal="@{vm.weeklyMeals[position].dinner}"
            app:mealTime="@{MealTime.DINNER}"
            app:time="@{`오후 7시 21분`}" />

    </LinearLayout>

</layout>
