<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <variable
            name="shortWeekDays"
            type="List&lt;String>" />

        <variable
            name="user"
            type="in.dimigo.dimigoin.data.model.UserModel" />

        <variable
            name="date"
            type="in.dimigo.dimigoin.ui.util.DateChangedLiveData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/layout_title"
            app:hideDivider="@{true}"
            app:icon="@{@drawable/ic_location_class}"
            app:sub="@{@string/night_study_1}"
            app:title="@{@string/attendance_state}" />

        <include
            android:id="@+id/attendance_table_layout"
            layout="@layout/layout_attendance_table" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/default_horizontal_margin"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:overScrollMode="never" />

    </LinearLayout>

</layout>
