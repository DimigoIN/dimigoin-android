<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/pink_400</item>
        <item name="colorPrimaryVariant">@color/grey_800</item>
        <item name="colorSecondary">@color/pink_400</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.App">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/black</item>
    </style>

    <style name="TextStyle.Sub">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="TextStyle.Content">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
