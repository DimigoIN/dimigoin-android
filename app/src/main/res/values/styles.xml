<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/black</item>
    </style>

    <style name="Text.Title.Tag">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/blue_grey_400</item>
    </style>

    <style name="Text.Sub">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Text.Sub.Tag">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/pink_400</item>
    </style>

    <style name="Text.Sub.Big">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Sub.Grey">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#B8B8B8</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="Text.Content">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Content.Grey">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="Text.CardTitle">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/pink_400</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Slim">
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance.FullRounded</item>
    </style>

    <style name="Button.Dialog">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance.BottomRounded</item>
    </style>

    <style name="Button.Dialog.Left">
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance.BottomLeftRounded</item>
    </style>

    <style name="Button.Dialog.Right">
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance.BottomRightRounded</item>
    </style>

    <style name="ButtonAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/primary_corner_radius</item>
    </style>

    <style name="ButtonAppearance.FullRounded">
        <item name="cornerSize">100dp</item>
    </style>

    <style name="ButtonAppearance.BottomRounded">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/primary_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/primary_corner_radius</item>
    </style>

    <style name="ButtonAppearance.BottomLeftRounded">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/primary_corner_radius</item>
    </style>

    <style name="ButtonAppearance.BottomRightRounded">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/primary_corner_radius</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/grey_300</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/primary_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/primary_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/primary_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/primary_corner_radius</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/red_a400</item>
        <item name="boxStrokeErrorColor">@color/red_a400</item>
    </style>

    <style name="TextInputEditText">
        <item name="fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="CarbonElevation">
        <item name="carbon_elevation">@dimen/carbon_elevation</item>
        <item name="carbon_elevationSpotShadowColor">@color/black_alpha_20</item>
    </style>

    <style name="CarbonCard" parent="CarbonElevation">
        <item name="android:background">@drawable/bg_round_corner_square</item>
        <item name="carbon_cornerRadius">@dimen/primary_corner_radius</item>
    </style>

    <style name="CarbonCard.Light">
        <item name="carbon_elevationSpotShadowColor">@color/black_alpha_10</item>
    </style>

    <style name="CarbonCard.Round">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="carbon_cornerRadius">100dp</item>
        <item name="carbon_elevationSpotShadowColor">@color/black_alpha_10</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="Divider.Thin">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Thin.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="WidgetText">
        <item name="android:textColor">?attr/widgetTextColor</item>
    </style>

    <style name="WidgetText.Title">
        <item name="android:textColor">@color/pink_400</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WidgetText.Content">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.App.Widget" parent="">
        <item name="colorPrimary">@color/pink_400</item>
        <item name="widgetBackgroundColor">@color/white</item>
        <item name="widgetTextColor">@color/grey_800</item>
    </style>

</resources>
