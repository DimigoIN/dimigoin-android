<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="@dimen/primary_corner_radius"
                android:topLeftRadius="2dp"
                android:topRightRadius="@dimen/primary_corner_radius" />
        </shape>
    </item>
    <item android:width="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/pink_400" />
            <corners
                android:bottomLeftRadius="@dimen/primary_corner_radius"
                android:bottomRightRadius="@dimen/primary_corner_radius"
                android:topLeftRadius="@dimen/primary_corner_radius"
                android:topRightRadius="@dimen/primary_corner_radius" />
        </shape>
    </item>
</layer-list>
